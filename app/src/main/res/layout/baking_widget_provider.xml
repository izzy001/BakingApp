<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    android:background="@color/colorWidgetBackground">
    
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivRecipeIcon"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/brownie"
        android:contentDescription="@string/recipe_icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_ingredients"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@color/colorWidgetBackground"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:text="@string/you_will_ingredients_of_latest_recipe_you_open_here"
        android:textColor="#F0E7E8"
        android:textSize="12sp"
        android:layout_margin="8dp" />

</RelativeLayout>